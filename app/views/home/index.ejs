<% include ../shared/header %>
<% include ../shared/nav %>
	<div class="ts-container ts-theme">
		<div class="ts-row ">
			<% 
			if(layoutdata.docs && layoutdata.docs.length>0){
				var fullitem=false;
				var collectionitem=false;
				layoutdata.docs.forEach(function(item,index){
					if(index ===0){%>
						<div class="ts-col-span12 ts-callout">
							<% include ../shared/partial/_item %>
						</div>
					<%}
					else{%>
						<div class="ts-col-span4 ts-screenmd-col-span12 ts-screensm-col-span12 ts-screenxs-col-span12 ts-grid">
							<% include ../shared/partial/_item %>
						</div>
					<%}
					%>
				<%});
			}
			else{%>
				no items
			<%}%>
		</div>
		<div class="ts-row ">
			<div class="ts-document ">
				<div class="ts-row">
					<div class="ts-col-span3 ts-screensm-col-span6 ts-screenxs-col-span12">
						<div class="ts-row">
						<h3>Authors</h3>
						<ul>
							<% layoutdata.authors.forEach(function(author){%>
								<li><a href="/browse/authors/<%= author.username %>"><%= author.username %></a></li>
							<%})%>
						</ul>
						</div>
					</div>
					<div class="ts-col-span3 ts-screensm-col-span6 ts-screenxs-col-span12">
						<div class="ts-row">
						<h3>Browse</h3>
						<ul>
							<% layoutdata.contenttypes.forEach(function(contenttype){%>
								<li><a href="/browse/contenttypes/<%= contenttype.name %>"><%= contenttype.title %></a></li>
							<%})%>
						</ul>
						</div>
					</div>
					<div class="ts-col-span3 ts-screensm-col-span6 ts-screenxs-col-span12">
						<div class="ts-row">
						<h3>Categories</h3>
						<ul>
							<% layoutdata.categories.forEach(function(category){%>
								<li><a href="/browse/categories/<%= category.name %>"><%= category.title %></a></li>
							<%})%>
						</ul>
						</div>
					</div>
					<div class="ts-col-span3 ts-screensm-col-span6 ts-screenxs-col-span12">
						<div class="ts-row">
						<h3>Tags</h3>
						<ul>
							<% layoutdata.tags.forEach(function(tag){%>
								<li><a href="/browse/tags/<%= tag.name %>"><%= tag.title %></a></li>
							<%})%>
						</ul>
						</div>
					</div>	
				</div>			
			</div>
		</div>
	</div>
<% include ../shared/footer %>