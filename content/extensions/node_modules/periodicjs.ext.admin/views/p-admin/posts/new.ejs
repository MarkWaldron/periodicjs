<% include ../../shared/header %>
<% include ../../shared/nav %>
	<form class="_pea-form" method="post" action="/post/new">
		<input type="hidden" name="_csrf" value=<%= locals.token %> >
		<div class="_pea-container">
			<div class="_pea-row">
				<div class="_pea-col-span8">
					<h2>New Post</h2>
					<div class="_pea-document">
						<div class="_pea-row">
							<div class="_pea-container-forminput">
								<input class="form-padding form-input-fullwith" type="text" placeholder="Title" name="title"/>
							</div>
							<div class="_pea-container-forminput">
								<textarea class="form-padding form-input-fullwith" name="content" placeholder="New Post">New Post</textarea>
							</div>
						</div>
					</div>
					<!-- <h2>Media Assets</h2>
					<div class="_pea-document">
						new post
					</div> -->
				</div>
				<div class="_pea-col-span3 _pea-pull-right">
					<!-- <form class="_pea-form" method="get">
						<input type="text" placeholder="search" name="search"/>
					</form> -->
					<h2>Options</h2>
					<div class="_pea-document">
						<input type="text" placeholder="Status" name="status" value="published"/>
						<input type="submit" name="save_button" value="Save" class="_pea-button _pea-color-info"/>
					</div>
					<h2>Attributes</h2>
					<div class="_pea-document">
						<input type="text" placeholder="Type" name="posttype"/>
						<input type="text" placeholder="Tags" name="tags"/>
						<input type="text" placeholder="Collections" name="collections"/>
						<input type="text" placeholder="Authors" name="authors"/>
						<input type="text" placeholder="Dek" name="dek"/>
						<input type="text" placeholder="Type" name="posttype"/>
					</div>
				</div>
			</div>
		</div>
	</form>
<% include ../../shared/footer %>
