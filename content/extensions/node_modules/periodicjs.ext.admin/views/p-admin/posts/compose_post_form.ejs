<input type="hidden" name="_csrf" value=<%= locals.token %> >
<div class="_pea-container">
	<div class="_pea-row">
		<div class="_pea-col-span8">
			<h2><% if(post){%>Edit<%}else{%>New<%} %> Post</h2>
			<div class="_pea-document">
				<div class="_pea-row">
					<div class="_pea-row _pea-container-forminput">
						<input class="_pea-col-span12" type="text" placeholder="Title" value="<% if(post && typeof post.title==='string'){%><%= post.title %><%}%>" name="title"/>
					</div>
					<div class="_pea-row _pea-container-forminput no-margin">
						<textarea class="textarea-tall _pea-col-span12" name="content" placeholder="New Post"><% if(post && typeof post.content==='string'){%><%= post.content %><%}%></textarea>
					</div>
				</div>
			</div>
			<!-- <h2>Media Assets</h2>
			<div class="_pea-document">
				new post
			</div> -->
		</div>
		<div class="_pea-col-span3 _pea-pull-right">
			<!-- <form class="_pea-form" method="get">
				<input type="text" placeholder="search" name="search"/>
			</form> -->
			<h2>Options</h2>
			<div class="_pea-document">
				<input type="text" placeholder="Status" name="status" value="published"/>
				<input type="submit" name="save_button" value="<% if(post){%>Update<%}else{%>Save<%}%>" class="_pea-button _pea-color-info"/>
			</div>
			<h2>Attributes</h2>
			<div class="_pea-document">
				<input type="text" placeholder="Type" name="posttype"/>
				<input type="text" id="padmin-tags" placeholder="Tags" name="tags"/>
				<input type="text" placeholder="Categories" name="categories"/>
				<input type="text" placeholder="Collections" name="collections"/>
				<input type="text" placeholder="Authors" name="authors"/>
				<input type="text" placeholder="Dek" name="dek"/>
			</div>
		</div>
	</div>
</div>