<% include ../../shared/header %>
<% include ../../shared/nav %>
	<div class="_pea-container">
		<div class="_pea-row">
			<div class="_pea-col-span6">
				<a href="/p-admin/post/new" class="_pea-button _pea-color-info">New Post</a>
			</div>
			<div class="_pea-col-span6 _pea-text-right">
				<form class="_pea-form" method="get">
					<input type="text" placeholder="search" name="search"/>
				</form>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span12">
				<div class="_pea-document">
					<table class="_pea-table">
						<thead>
							<tr class="_pea-text-left">
								<th>Title</th>
								<th>Author</th>
								<th>Collections</th>
								<th>Tags</th>
								<th>Date</th>
							</tr>
						</thead>
						<tbody>
							<% if(posts.length>0){
									posts.forEach(function(post){ %>
										<tr>
											<td> <a href="/p-admin/post/edit/<%= post.name %>"> <%= post.title %> </a></td>
											<td><%= post.primaryauthor.username %></td>
											<td><%= post.collections %> c</td>
											<td><%= post.tags %> t</td>
											<td>
												<% var disDate = new Date(post.createdat) %>
												<%= (disDate.getFullYear()) %>/
												<%= (disDate.getMonth()+1) %>/
												<%= (disDate.getDate()) %>
											</td>
										</tr>
										<%
									});
								}
								else{ %>
									<tr><td colspan="5" class="_pea-text-center">No Posts!</td></tr>
								<%} %>
						</tbody>
						<tfoot>
							<tr class="_pea-text-left">
								<th>Title</th>
								<th>Author</th>
								<th>Collections</th>
								<th>Tags</th>
								<th>Date</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
<% include ../../shared/footer %>
