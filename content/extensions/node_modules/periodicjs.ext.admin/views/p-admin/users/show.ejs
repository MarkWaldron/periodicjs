<% include ../../shared/header %>
<% include ../../shared/nav %>
	<div class="_pea-container">
		<div class="_pea-row _pea-form">
			<div class="_pea-col-span6">
				<a href="/p-admin/users/new" class="_pea-button _pea-color-info">Create New Account</a>
				<a href="/p-admin/users/edit-access" class="_pea-button _pea-color-success">Manage User Access</a>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span10 _pea-col-nofloat">
			  <div class="_pea-document">
					<div class="_pea-row">
						<div class="_pea-col-span4  _pea-text-center">
					    <img src="/favicon.png" alt="" style="width:60%" class="_pea-text-small">
					    <!-- <img src="/favicon.png" alt="" class="center-block img-circle img-responsive"> -->
					  </div><!--/col-->           
					  <div class="_pea-col-span8">
					    <h2><%= userprofile.username %></h2>
					    <p><strong>Name: </strong> <%= userprofile.firstname %> <%= userprofile.lastname %></p>
					    <p><strong>About: </strong> <%= userprofile.description %></p>
					  </div><!--/col--> 
					</div>
					<div class="_pea-row _pea-text-center _pea-form">
					  <div class="_pea-col-span4 ">
					    <h2><strong>Account Type</strong></h2>                    
					    <p><small>Snippets</small></p>
					    <button type="button" class="btn _pea-button">Options </button>  
					  </div><!--/col-->
					  <div class="_pea-col-span4 ">
					    <h2><strong>User Groups</strong></h2>                    
					    <p><small>Followers</small></p>
					    <button class="btn _pea-button"> Follow </button>
					  </div><!--/col-->
					  <div class="_pea-col-span4 ">
					    <h2><strong>User Roles</strong></h2>                    
					    <p><small>Following</small></p>
					    <a class="btn _pea-button _pea-color-success" href="/browse/userprofiles/<%= userprofile.username %>"><span class="fa fa-user"></span> View Content </a>
					  </div><!--/col-->
					</div>
			  </div><!--/panel-->
			</div>
			</div>
	</div>
<% include ../../shared/footer %>
