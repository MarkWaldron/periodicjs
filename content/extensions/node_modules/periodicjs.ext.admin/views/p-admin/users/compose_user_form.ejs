<input type="hidden" name="_csrf" value=<%= locals.token %> >
<div class="_pea-container">
	<div class="_pea-row">
		<div class="_pea-col-span10 _pea-col-nofloat">
			<% 
				var genericdoc = userprofile; 
				var genericdocTitle = userprofile.username; 
			%>
			
			<h2>
				<% if(genericdoc){%>Edit<%}else{%>New<%} %> <%= genericdocTitle %>
				<%if(genericdoc){%>
					<button id="delete-user" data-href="/p-admin/user/<%= genericdoc._id %>/delete" class="_pea-pull-right _pea-button _pea-color-error">delete</button>
				<%}%>
			</h2>
			<%if(genericdoc){%>
				<input type="hidden" name="docid" value="<%= genericdoc._id %>">
			<%}%>
			<div class="_pea-document">
				<div class="_pea-row">
					<div class="_pea-row">
						<div class="_pea-col-span4  _pea-text-center">
					    <img src="/favicon.png" alt="" style="width:60%" class="_pea-text-small">
					    <!-- <img src="/favicon.png" alt="" class="center-block img-circle img-responsive"> -->
					  </div><!--/col-->           
					  <div class="_pea-col-span8">
					    <h2><%= userprofile.username %></h2>
					    <p><strong>Name: </strong> <%= userprofile.firstname %> <%= userprofile.lastname %></p>
					    <p><strong>About: </strong> <%= userprofile.description %></p>
					    <h2>Account Info</h2>
							<div class="_pea-row _pea-container-forminput">
								<small>Name</small>
								<input type="email" name="email" placeholder="Your email address"  class="_pea-col-span12"/>
							</div>
							<div class="_pea-row _pea-container-forminput">
								<small>Website</small>
								<input type="text" name="username" placeholder="username"  class="_pea-col-span12" />
							</div>
							<div class="_pea-row _pea-container-forminput">
								<small>Bio</small>
								<input type="text" name="username" placeholder="username"  class="_pea-col-span12" />
							</div>
							<div class="_pea-row _pea-container-forminput">
								<small>Location</small>
								<input type="password" name="password" placeholder="password"  class="_pea-col-span12"/>
							</div>
							<div class="_pea-row _pea-container-forminput" style="margin-bottom:1.5em">
								<small>Gender</small>
								<input type="password" title="confirm your password" name="passwordconfirm" placeholder="confirm password" class="_pea-col-span12" />
							</div>
					  </div><!--/col--> 
					</div>
					<div class="_pea-row _pea-form">
						<h2>Account Access</h2>
						<div class="_pea-row _pea-container-forminput">
							<small>User Roles</small>
							<input type="password" name="password" placeholder="password"  class="_pea-col-span12"/>
						</div>
					</div>
					<div class="_pea-row">
						<h2>Account Settings</h2>
						<div class="_pea-row _pea-container-forminput">
							<small>Email</small>
							<input type="email" name="email" placeholder="Your email address"  class="_pea-col-span12"/>
						</div>
						<div class="_pea-row _pea-container-forminput">
							<small>Username</small>
							<input type="text" name="username" placeholder="username"  class="_pea-col-span12" />
						</div>
						<div class="_pea-row _pea-container-forminput">
							<small>Password</small>
							<input type="password" name="password" placeholder="password"  class="_pea-col-span12"/>
						</div>
						<div class="_pea-row _pea-container-forminput" style="margin-bottom:1.5em">
							<small>Confirm password</small>
							<input type="password" title="confirm your password" name="passwordconfirm" placeholder="confirm password" class="_pea-col-span12" />
						</div>
					</div>
					<div class="_pea-row _pea-container-forminput _pea-text-center no-margin">
						<input type="submit" name="save_button" value="<% if(genericdoc){%>Update<%}else{%>Save<%}%>" class="_pea-button _pea-color-info _pea-col-span2 _pea-col-nofloat"/>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>